        <div class="container">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    @if (Session["username"] != null)
                    {
                        <li class="nav-item">@Html.ActionLink("Logout", "Logout", "Users", null, new { @class = "nav-link" })</li>
                    }
                    else
                    {
                        <li class="nav-item">@Html.ActionLink("Login", "Login", "Users", null, new { @class = "nav-link" })</li>
                    }
                    <li class="nav-item dropdown yamm-fw">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            МИНИСТЕРСТВОТО
                        </a>
                        <ul class="full-width dropdown-menu" aria-labelledby="navbarDropdown">
                            <div class="yamm-content">
                                <div class="container">
                                    <div class="row navbar-dropdown-titles">
                                        <div class="col-md">
                                            ЗА МИНИСТЕРСТВОРО НА ВЪТРЕШНИТЕ РАБОТИ
                                        </div>
                                        <div class="col-md">
                                            ОСНОВНИ СТРУКТУРИ НА МВР
                                        </div>
                                        <div class="col-md">
                                            ЗА МИНИСТЕРСТВОРО НА ВЪТРЕШНИТЕ РАБОТИ
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md navbar-dropdown-items">
                                            @Html.ActionLink("Home", "Index", "Home")<br>
                                            @Html.ActionLink("Home", "Index", "Home")<br>
                                            Ръководство<br>
                                            Ръководство<br>
                                            Ръководство<br>
                                            Ръководство<br>
                                            Ръководство<br>
