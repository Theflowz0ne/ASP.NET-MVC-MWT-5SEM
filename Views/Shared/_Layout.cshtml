                                <div class="col">
                                    <img src="~/Content/Images/lion-black1.png" class="img-fluid" />
                                </div>
                                <div class="col">
                                    <img src="~/Content/Images/logo-mvr1.png" class="img-fluid" />
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-9">
                        <div class="container>">
                            <div class="row upper-footer">
